<div class="container">

	<h1 class="mt-4">URL Shrinker</h1>

	<form action="/shortUrls" method="POST" class="my-4">
		<label for="fullUrl">URL: </label>
		<input type="url" name="fullUrl" class="form-control">
		<div class="col text-center">
			<button type="submit" class="btn btn-primary mt-4">Shrink</button>
		</div>
	</form>

	<table class="table table-striped table-responsive">

		<thead>
			<tr>
				<th>Full URL</th>
				<th>Short URL</th>
				<th>Clicks</th>
			</tr>
		</thead>

		{{#each shortUrls}}

		<tbody>
			<tr>
				<td><a href="{{full}}">{{full}}</a></td>
				<td><a href="{{short}}">{{short}}</a></td>
				<td>{{clicks}}</td>
			</tr>
		</tbody>

		{{else}}

		<tbody>
			<tr>
				<td><small>no full url</small></td>
				<td><small>no shortened url</small></td>
				<td><small>no clicks</small></td>
			</tr>
		</tbody>

		{{/each}}

	</table>

</div>